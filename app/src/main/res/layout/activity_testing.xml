<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.laveen.exploreandrooid.TestingActivity">

    <Button
        android:id="@+id/idle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onIdleClick"
        android:text="IDLE BUTTON" />

    <Button
        android:id="@+id/active_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onActiveClick"
        android:text="ACTIVE BUTTON" />

    <com.example.laveen.exploreandrooid.CircleView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/blue" />


    <com.example.laveen.exploreandrooid.BezelImageView
        android:id="@+id/circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/blue"
        app1:maskDrawable="@drawable/mask"
        />
<!--
    app1:borderDrawable="@drawable/border"
-->
</LinearLayout>
